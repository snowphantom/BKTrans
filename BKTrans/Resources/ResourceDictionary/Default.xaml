<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:BKTrans.Utility"
    xmlns:Material="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Style
        x:Key="ButtonToolBarStyle"
        BasedOn="{StaticResource MetroFlatButton}"
        TargetType="{x:Type Button}">
        <Setter Property="Background" Value="WhiteSmoke" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    <Style x:Key="IconToolBarStyle" TargetType="{x:Type Material:PackIconMaterialLight}">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="12" />
    </Style>
    <Converters:InverseBool2VisibilityConverter x:Key="inverseBool2VisibilityConverter" />
    <Converters:InverseBoolConverter x:Key="inverseBoolConverter" />
    <Converters:ShortNameConverter x:Key="shortNameConverter" />
    <system:String x:Key="ApplicationTitle">BKTrans</system:String>
</ResourceDictionary>